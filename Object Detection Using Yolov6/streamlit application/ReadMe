# Clone the repo
git clone https://github.com/meituan/YOLOv6.git

# Move into the repo and install the requirements and  run some auxiliary command to remove cache
cd YOLOv6
pip install -r requirements.txt
pip install --upgrade --no-cache-dir
# if using colab
pip install --upgrade --no-cache-dir gdown

# now once the weights folder is created. Install the weights into it.
cd weights
wget https://github.com/meituan/YOLOv6/releases/download/0.1.0/yolov6n.pt
wget https://github.com/meituan/YOLOv6/releases/download/0.1.0/yolov6s.pt
